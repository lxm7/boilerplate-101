{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src/Pages/ShortestRoute",
    "src/Pages/ShoppingList",
    "src/Pages/SunriseSunset",
    "src/Pages/MovieList",
    "src/Pages/MobileBeerApp",
    "src/components"
  ],
  "exclude": [
    "src/Pages/WebworkerExport",
    "src/Pages/MapBox",
    "src/Pages/SimpleExpressForm",
    "server"
  ]
}
